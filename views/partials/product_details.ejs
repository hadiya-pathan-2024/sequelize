<% images=productData.images; parameters=productData.parameters; let fullImage=images[0].image_url%>
<div class="w-full flex my-10 relative m-3 gap-10">
  <div class="w-1/2 h-screen sticky top-10 left-0">
    <div class="h-auto m-2 ">
        <h3 class="text-2xl">
          <%= productData.product_name%>
        </h3>
      </div>
      <div class="flex h-auto">
        <div class="w-1/4 ">  
          <% images.forEach((item,index)=> {%>
            <div class="flex items-center m-2 justify-center overflow-hidden">
              <img onmouseover="setFullImage('img-<%=index%>')" id="img-<%=index%>"
              class="product-img mx-auto h-[80px] max-h-[80px] w-[150px] max-w-[150px] scale-75 duration-200"
              src="/assets/images/<%=item.image_url%>" alt="image">
              
            </div>
            <% }) %>
          </div>
        <div id="fullImagediv" class="w-3/4 m-2 relative flex items-center justify-center overflow-hidden h-[350px]">
          <span id="lence" class=" absolute hidden top-0 left-0 w-[100px]  h-[100px] border border-green-500"></span>
          <img id="fullimg" class="h-full object-cover" src="/assets/images/<%=fullImage%>" alt="">
        </div>
        
      </div>
    </div>
    
    <div class="w-1/2 m-3 h-auto ml-auto ">
      <div id="zoomedImg" class=" fixed right-22 top-10 hidden w-[500px] z-2  h-[500px]" style="background-image: url('/assets/images/<%=fullImage%>'); background-size: 1800px 1800px; background-repeat: no-repeat;">
      </div>
     
      <div class="w-full mb-6">
        <h3 class="font-bold">Description</h3>
        <p class="text-sm">
          <%= productData.description%>
        </p>
      </div>
      <div class="mb-6 flex w-1/3 justify-between">
        <p class="<%
      switch(productData.auction_id){
        case null:%>
          text-red-500
          <%break;
        default: %>
        text-green-500
      <%}
      %>">
          <% if(productData.auction_id==null){%>
            Not in Auction <%}else{ %> In Auction <% } %>
        </p>
        <p class="<%
      switch(productData.status){
        case 'unsold':%>
          text-green-500
          <%break;
        case 'sold': %>
        text-red-500
        <%break;
        case 'inauction': %>
        text-orange-500
        <%break;
        case 'pending': %>
        text-indigo-500
        <%break;
      }
      %>">
          <%= productData.status%>
        </p>
      </div>
      <div class="mb-6  w-[80%] flex justify-between">
        <h3 class="font-bold">Product Condition</h3>
        <p>
          <% if(productData.product_condition !=null){%>
            <%= productData.product_condition %>
              <%}else{%>-<%}%>
        </p>
      </div>
      <div class="mb-6  w-[80%] flex justify-between">
        <h3 class="font-bold">Starting Price</h3>
        <p>
          <% if(productData.starting_price !=null){%>
            <%= productData.starting_price %>
              <%}else{%>-<%}%>
        </p>
      </div>
      <div class="mb-6  w-[80%] flex justify-between">
        <h3 class="font-bold">Reserved Price</h3>
        <p>
          <% if(productData.reserved_price !=null){%>
            <%= productData.reserved_price %>
              <%}else{%>-<%}%>
        </p>
      </div>
      <div>
        <h3 class="font-bold mb-3">Specifications</h3>
        <ul>
          <% parameters.forEach(item=> { %>
            <li class="flex w-[80%]  mb-3 border-b-2 border-gray-300 justify-between">
              <div>
                <%= item.parameter_name %>
              </div>
              <div>
                <%= item.parameter_value %>
              </div>
            </li>
            <% }) %>
        </ul>
      </div>
    </div>

</div>
<script src="/js/product_details.js"></script>