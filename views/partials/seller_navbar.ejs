<div class="header border shadow-lg sticky top-0  bg-white left-0 z-50 flex items-center justify-between gap-10 p-5">
  <div>
    <h3 class="font-bold text-black-600 text-3xl border-red-500 w-fit underline underline-offset-[1rem] text-primary"><%= heading %></h3>
  </div>
  <div class="flex items-center lg:order-2">
    <div class="flex items-center max-w-sm mx-auto my-2" >
      <div class="flex items-center border border-primary text-gray-900 rounded-full bg-gray-50 pl-0 py-2 pr-4">
        <input type="text" id="search" name="search"
          class="rounded-full text-md block w-full pl-5 outline-none" placeholder="Live Auctions..." required />
        <button type="button" id="srch">
          <%- include("../partials/svgs/search.ejs") %>
        </button>
      </div>
    </div>


      <button type="button" data-dropdown-toggle="notification-dropdown"
        class="p-2 mr-1 text-gray-500 rounded-lg">
        <a href="/seller/dashboard/notification" class="relative" id="notification">
          <span class="text-center flex items-center justify-center h-6 w-6 rounded-full bg-gray-200 absolute top-0 -right-6 text-black text-lg mix-blend-multiply -z-10" id="notificationCountOnNav">1</span>
          <div class="p-[0.5rem] bg-gray-500 rounded-full absolute top-1 -right-5 animate-ping" id="notificationPingOnNav"></div>
          <%- include('../partials/svgs/notification.ejs')%>
        </a>
      </button>
      <button type="button"
        class="flex mx-3 text-md  rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600"
        id="user-menu-button" aria-expanded="false" data-dropdown-toggle="dropdown">
        <a href="/profile">
        
            <div class="overflow-clip w-10 h-10 rounded-full border shadow-lg">
              <img class="cursor-pointer w-10 h-auto" src="/assets/profile.png" id="profileImage"
                alt="Profile image">
            </div>
          
        </a>
      </button>
    </div>

  <script>
    getProfilePic();
    async function getProfilePic() {
      const result = await fetch('/profileimg');
      const resultObj = await result.json();
      if (resultObj.profile_pic) {
        const imageSrc = `${await resultObj.imagePath}${await resultObj.profile_pic}`
        document.getElementById('profileImage').src = imageSrc; 
      }
    }
  </script>
</div>

<script src="/js/seller_dashboard.js"></script>
<script src="/js/seller_notification.js"></script>